@model PhonesDTO
@{
    ViewData["Title"] = "Phones";
}

<h1>Phones</h1>

<div class="row">
    <div class="col-sm-3">
        <h4 class="mt-2">Brands</h4>
        <div class="list-group">
            <a asp-action="Index" asp-route-gid="" class="list-group-item list-group-item-action @(Model.BrandId.HasValue ? "" : "active")">
                All
            </a>
            @foreach (var brand in Model.Brands)
            {
                <a asp-action="GetPhonesByBrand" asp-route-brandName="@brand.BrandName" class="d-flex align-items-baseline list-group-item list-group-item-action @(brand.Id == Model.BrandId ? "active" : "")">
                    @brand.BrandName
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Model</th>
                    <th>RAM</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var phone in Model.Phones)
                {
                    <tr>
                        <td>@phone.Id</td>
                        <td><img src="~/img/@phone.PicturePath" alt="@phone.Model" width="67" /></td>
                        <td>
                            <div class="d-flex justify-content-between align-items-start">
                                <a target="_blank">
                                    @phone.Model
                                </a>
                            </div>
                        </td>
                        <td>@phone.RAM</td>
                        <td>@phone.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





